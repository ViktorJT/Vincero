{
  "name": "@vincero/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js",
      "require": "./dist/components/*/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && postcss ./styles.css -o dist/styles.css",
    "dev": "concurrently \"tsup --watch\" \"postcss ./styles.css -o dist/styles.css --watch\"",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.1.0",
    "class-variance-authority": "0.7.0",
    "clsx": "^2.1.1",
    "gsap": "3.12.5",
    "lucide-react": "0.454.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "22.8.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vincero/eslint-config": "workspace:*",
    "@vincero/tailwind-config": "workspace:*",
    "@vincero/typescript-config": "workspace:*",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": false
    }
  }
}
